<div class="container">
  <h2>Restaurant Results</h2>
  <a href="/form" class="btn btn-secondary mb-3">Back</a>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Borough</th>
        <th>Cuisine</th>
      </tr>
    </thead>
    <tbody>
      {{#each restaurants}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.borough}}</td>
          <td>{{this.cuisine}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div class="d-flex justify-content-between mt-4">
  {{#if prevPage}}
    <a class="btn btn-outline-primary" href="/restaurants?page={{prevPage}}&perPage={{perPage}}{{#if borough}}&borough={{borough}}{{/if}}">Previous</a>
  {{/if}}

  {{#if nextPage}}
    <a class="btn btn-outline-primary" href="/restaurants?page={{nextPage}}&perPage={{perPage}}{{#if borough}}&borough={{borough}}{{/if}}">Next</a>
  {{/if}}
</div>

