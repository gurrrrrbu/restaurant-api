<div class="container my-4">
  <div class="mb-3">
    <span class="btn btn-outline-secondary disabled">Search Restaurants</span>
    <form method="GET" action="/restaurants" class="d-inline ms-2">
      <input type="hidden" name="page" value="1">
      <input type="hidden" name="perPage" value="{{perPage}}">
      <input class="form-control d-inline w-auto" type="text" name="borough" placeholder="Borough (optional)"
             value="{{borough}}">
      <button class="btn btn-primary ms-2" type="submit">Search</button>
    </form>
  </div>

  <h1>Restaurants</h1>

  {{#if restaurants.length}}
    <ul class="list-group my-3">
      {{#each restaurants}}
        <li class="list-group-item">
          <strong>{{this.name}}</strong> â€” {{this.borough}} | {{this.cuisine}}
        </li>
      {{/each}}
    </ul>

    <div class="d-flex gap-2">
      {{#if hasPrev}}
        <a class="btn btn-outline-secondary"
           href="/restaurants?page={{decrement page}}&perPage={{perPage}}&borough={{borough}}">Prev</a>
      {{/if}}
      {{#if hasNext}}
        <a class="btn btn-outline-secondary"
           href="/restaurants?page={{increment page}}&perPage={{perPage}}&borough={{borough}}">Next</a>
      {{/if}}
    </div>
  {{else}}
    <p class="text-muted mt-3">No restaurants found for your filters.</p>
  {{/if}}
</div>
