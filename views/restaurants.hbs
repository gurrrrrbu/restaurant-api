<div class="container my-4">
  <h1>Restaurants</h1>

  <form method="GET" action="/restaurants" class="row g-2 align-items-center mb-3">
    <input type="hidden" name="page" value="1">
    <input type="hidden" name="perPage" value="{{perPage}}">
    <div class="col-auto">
      <input class="form-control" type="text" name="borough" placeholder="Borough (optional)" value="{{borough}}">
    </div>
    <div class="col-auto">
      <button class="btn btn-primary" type="submit">Search</button>
    </div>
  </form>

  {{#if restaurants.length}}
    <ul class="list-group my-3">
      {{#each restaurants}}
        <li class="list-group-item">
          <strong>{{this.name}}</strong> â€” {{this.borough}} | {{this.cuisine}}
        </li>
      {{/each}}
    </ul>

    <div class="d-flex gap-2">
      {{#if hasPrev}}
        <a class="btn btn-outline-secondary"
           href="/restaurants?page={{decrement page}}&perPage={{perPage}}&borough={{borough}}">Prev</a>
      {{/if}}
      {{#if hasNext}}
        <a class="btn btn-outline-secondary"
           href="/restaurants?page={{increment page}}&perPage={{perPage}}&borough={{borough}}">Next</a>
      {{/if}}
    </div>
  {{else}}
    <p class="text-muted mt-3">No restaurants found for your filters.</p>
  {{/if}}
</div>
