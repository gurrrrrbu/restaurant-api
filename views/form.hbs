<div class="container my-4">
  <h1>Find Restaurants</h1>

  <form method="GET" action="/restaurants" class="mt-3">
    <div class="row g-2 align-items-center">
      <div class="col-auto">
        <input type="number" name="page" min="1" value="{{page}}" class="form-control" placeholder="Page" required>
      </div>
      <div class="col-auto">
        <input type="number" name="perPage" min="1" value="{{perPage}}" class="form-control" placeholder="Per Page" required>
      </div>
      <div class="col-auto">
        <input type="text" name="borough" value="{{borough}}" class="form-control" placeholder="Borough (optional)">
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </div>
  </form>
</div>
